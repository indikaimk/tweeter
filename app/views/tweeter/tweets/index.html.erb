<% if notice %>
  <p style="color: green"><%= notice %></p>
<% end %>

<% content_for :title, "Tweets" %>
<section >
  <div class="top-space-point-5 bottom-space-point-5 flex-left">
    <div>
      <%= button_to "New tweet", publisher_tweets_path(@publisher), params: {tweet: {publisher_id: @publisher}}, method: :post %>
    </div>
    <div>
      <%= link_to "Drafts", tweeter.publisher_tweets_path(@publisher, status: "draft") %>
    </div>
    <div>
      <%= link_to "scheduled", tweeter.publisher_tweets_path(@publisher, status: "scheduled") %>
    </div>
    <div>
      <%= link_to "Published", tweeter.publisher_tweets_path(@publisher, status: "published") %>
    </div>
  </div>

</section>
<section>
  <div id="tweets">
    <% if @tweets %>
    <% @tweets.each do |tweet| %>
      <div class="top-border bottom-space-point-5">
        <%= render tweet %>
          <div class="meta-text">
            <% if tweet.thread.tweets.count == 1 %>
              <%= tweet.thread.tweets.count %> tweet in thread
            <% else %>
              <%= tweet.thread.tweets.count %> tweets in thread
            <% end %>
          </div>
        <div class="top-space-point-5">
          <%= link_to "Show", tweet %>
          <%= link_to "Edit", edit_tweet_path(tweet) %>
        </div>        
      </div>

    <% end %>
    <% end %>
  </div>
</section>


